<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lilicould.blog.dao.CategoryMapper">
    <select id="selectAll" resultType="com.lilicould.blog.entity.Category">
        SELECT * FROM category WHERE status = 1
    </select>

    <select id="selectById" resultType="com.lilicould.blog.entity.Category">
        SELECT * FROM category WHERE id = #{id} AND status = 1
    </select>

    <insert id="insert">
        INSERT INTO category(name, slug, description, status)
        VALUES (#{name}, #{slug}, #{description}, #{status})
    </insert>

    <update id="update">
        UPDATE category
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="slug != null and slug != ''">
                slug = #{slug},
            </if>
            <if test="description != null and description != '' ">
                description = #{description},
            </if>
            <if test="status != null and status != ''">
                status = #{status},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <update id="deleteById">
        UPDATE category SET status = 0 WHERE id = #{id}
    </update>

</mapper>