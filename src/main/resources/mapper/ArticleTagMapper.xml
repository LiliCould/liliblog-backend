<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lilicould.blog.dao.ArticleTagMapper">
    
    <select id="getTagsByArticleId" resultType="com.lilicould.blog.entity.Tag">
        SELECT * FROM tag WHERE id IN (
            SELECT tag_id FROM article_tag WHERE article_id = #{articleId}
        )
    </select>

    <insert id="insert">
        insert into article_tag (article_id, tag_id) values (#{articleId}, #{tagId})
    </insert>

    <delete id="deleteByArticleId">
        delete from article_tag where article_id = #{articleId}
    </delete>
</mapper>